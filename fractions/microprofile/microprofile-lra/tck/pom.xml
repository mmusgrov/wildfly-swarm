<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.wildfly.swarm</groupId>
        <artifactId>build-parent</artifactId>
        <version>2018.5.0-SNAPSHOT</version>
        <relativePath>../../../../build-parent/pom.xml</relativePath>
    </parent>

    <artifactId>lra-tck-swarm-runner</artifactId>
    <name>Swarm LRA TCK Test Runner</name>

    <packaging>war</packaging>

    <properties>
        <version.wildfly-swarm>${project.version}</version.wildfly-swarm>
        <version.microprofile-lra-tck>0.0.2.Final-SNAPSHOT</version.microprofile-lra-tck>
        <version.narayana>5.8.3.Final-SNAPSHOT</version.narayana>
        <swarm.debug.port>5005</swarm.debug.port>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <failOnMissingWebXml>false</failOnMissingWebXml>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <build>
        <finalName>lra-tck</finalName>
        <plugins>
            <!-- the swarm plugin starts a swarm container -->
            <plugin>
                <groupId>org.wildfly.swarm</groupId>
                <artifactId>wildfly-swarm-plugin</artifactId>
                <version>${version.wildfly-swarm}</version>
                <configuration>
                    <jvmArguments>
                        <jvmArgument>-enableassertions</jvmArgument>
                    </jvmArguments>
                    <debugPort>${swarm.debug.port}</debugPort>
                    <properties>
                        <swarm.http.port>8080</swarm.http.port>
                        <lra.http.port>8082</lra.http.port>
                        <swarm.debug.port>${swarm.debug.port}</swarm.debug.port>
                    </properties>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>package</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <!-- pull in the microprofile-lra TCK which contains the JAX-RS resource
        for running the TCK. The swarm plugin will start a swarm container
        whic will detect the JAX-RS resources pulled in by the following TCK dependency
          -->
        <dependency>
            <groupId>org.eclipse.microprofile.lra</groupId>
	    <artifactId>microprofile-lra-tck</artifactId>
	    <!--
            <groupId>io.narayana.microprofile.lra</groupId>
            <artifactId>microprofile-lra-tck</artifactId>
-->
            <version>${version.microprofile-lra-tck}</version>
        </dependency>
        <!-- pull in the swarm implementation of the LRA API -->
        <dependency>
            <groupId>org.wildfly.swarm</groupId>
            <artifactId>microprofile-lra</artifactId>
            <version>${version.wildfly-swarm}</version>
        </dependency>
        <!--
        <dependency>
            <groupId>org.jboss.narayana.rts</groupId>
            <artifactId>lra-coordinator</artifactId>
            <version>${version.narayana}</version>
            <type>war</type>
        </dependency>
-->
    </dependencies>
</project>
