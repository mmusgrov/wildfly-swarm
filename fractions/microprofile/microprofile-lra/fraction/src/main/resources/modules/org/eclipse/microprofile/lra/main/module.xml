<module xmlns="urn:jboss:module:1.3" name="org.eclipse.microprofile.lra">
    <resources>
        <!-- make the LRA JAX-RS filters available to deployments -->
        <artifact name="org.jboss.narayana.rts:lra-filters:${version.narayana}"/>

        <artifact name="org.jboss.resteasy:resteasy-json-p-provider:${version.resteasy.json-p}"/>

        <artifact name="org.eclipse.microprofile.lra:microprofile-lra-api:${version.microprofile-lra}"/>
    </resources>

    <dependencies>
        <module name="org.jboss.weld.core"/>
        <module name="org.jboss.weld.spi"/>
        <module name="javax.ws.rs.api"/>
        <module name="org.jboss.logging" slot="main"/>
        <module name="javax.json.api" export="true" />
        <module name="org.jboss.narayana.rts.lra-client" export="true" slot="main"/>
        <module name="org.eclipse.microprofile.lra" export="true" services="import"/>
        <module name="org.eclipse.microprofile.config.api" export="true"/>
    </dependencies>
</module>
